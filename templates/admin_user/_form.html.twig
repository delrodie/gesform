{{ form_start(form) }}
<div class="row form-group">
    <div class="col-12 mt-3">{{ form_row(form.email) }}</div>
    <div class="col-12 mt-3">{{ form_row(form.username) }}</div>
    <div class="col-12 mt-3">{{ form_row(form.password) }}</div>
    <div class="col-12 mt-3">{{ form_row(form.roles) }}</div>
</div>
<div class="row" style="text-align:right;">
    <div class="col">
        <div class="text-right mt-5 pull-right">
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>

{{ form_end(form) }}
